---
// Components
import LinkLegal from "./LinkLegal.astro";

// Array
const legals = [
  { href: "#", text: "Libro de reclamaciones" },
  { href: "#", text: "Políticas de privacidad" },
  { href: "#", text: "Términos y condiciones" },
];
---

<section class="py-8 bg-pink-dark">
  <div class="flex flex-col justify-between md:flex-row items-center gap-4 w-9/10 mx-auto max-w-7xl">
    <span class="text-center text-white text-sm overflow-hidden">© 2025 Clínica Monteluz</span>
    <ul class="flex flex-col gap-2 md:flex-row md:gap-4">
      {legals.map(legal => <LinkLegal {...legal} />)}
    </ul>
  </div>
</section>