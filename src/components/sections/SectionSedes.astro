---
// Assets
import iconArrowWhite from "@assets/icons/icon-arrow-right-white.svg";
import iconArrowBlue from "@assets/icons/icon-arrow-right-blue.svg";

import imgLocationSedes from "@assets/img/icono-sedes-clinica-monteluz.webp";

// Components
import SectionContainer from "./SectionContainer.astro";
import ListSede from "@components/ListSede.astro";

// Array
const sedes = [
  { text: "Av. Buenos Aires N° 2307, Óvalo de Zapallal – Puente Piedra." },
  { text: "Calle Faustino Sarmiento, Óvalo Puente Piedra." },
  { text: "Av. Panamericana Norte. km 28.5, Puente Piedra." },
  { text: "Sede Pachacútec, frente al Hospital Perú Corea." },
];
---

<SectionContainer additionalClass="bg-nav-bg pb-0 md:pb-12">
  <div
    class="w-9/10 mx-auto max-w-5xl flex flex-col gap-8 md:flex-row md:gap-0"
  >
    <div class="w-full md:w-1/2 md:basis-1/2">
      <div class="flex flex-col gap-4">
        <h2
          class="text-white font-semibold text-clamp-hero leading-tight anim-fade-up overflow-hidden"
        >
          Encuéntranos
        </h2>
        <p class="text-white text-base anim-fade-up overflow-hidden">Nuestras sedes:</p>
        <ul class="flex flex-col gap-4">
          {sedes.map((sede) => <ListSede {...sede} />)}
        </ul>
        <a
          href="#"
          class="group w-max px-6 max-w-full py-2 mt-auto flex items-center justify-center gap-1 rounded-3xl mx-auto md:mx-0 border-2 border-white bg-nav-bg hover:bg-white anim-fade-up overflow-hidde"
        >
          <span
            class="text-white font-semibold text-sm transition-colors duration-300 group-hover:text-nav-bg"
            >Ver sedes</span
          >
          <figure
            class="flex items-center justify-center w-6 flex-shrink-0 relative"
          >
            <img
              src={iconArrowWhite.src}
              alt="arrow icon"
              class="w-3 h-3 absolute m-auto object-contain object-center transition-opacity duration-300 opacity-100 group-hover:opacity-0"
            />
            <img
              src={iconArrowBlue.src}
              alt="arrow icon"
              class="w-3 h-3 absolute m-auto object-contain object-center transition-opacity duration-300 opacity-0 group-hover:opacity-100"
            />
          </figure>
        </a>
      </div>
    </div>
    <figure class="w-full md:w-1/2 md:basis-1/2 md:relative anim-fade-up">
      <img
        draggable="false"
        src={imgLocationSedes.src}
        alt="sedes"
        class="w-full h-auto object-contain object-center -mb-15 md:mb-0 md:-top-35 md:absolute"
      />
    </figure>
  </div>
</SectionContainer>
