---
interface Props {
  icon: { src: string };
  text: string;
}

const { icon, text } = Astro.props;
---

<li class="w-full flex items-center gap-2 group transition-colors duration-200 hover:bg-nav-bg-opacity md:first:hidden md:border-b-2 md:border-b-transparent md:hover:bg-transparent md:hover:border-b-nav-bg">
  <a href="#" class="flex items-center gap-2 w-full px-5 py-3 md:px-0 md:w-max md:py-2">
    <img src={icon.src} alt={`${text} icon`} class="w-6 h-6 aspect-square md:hidden" />
    <span class="text-white inline-block md:text-nav-bg md:text-clamp-nav">{text}</span>
  </a>
</li>